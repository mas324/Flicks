<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/moviePoster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/movieSum"
        android:layout_alignParentTop="true"
        android:background="@color/colorDark"
        android:contentDescription="Movie picture"
        android:paddingStart="0dp"
        android:paddingEnd="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/moviePoster"
        android:layout_alignBottom="@+id/moviePoster" />

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moviePoster"
        android:layout_alignStart="@id/moviePoster"
        android:layout_alignEnd="@id/moviePoster"
        android:background="@color/colorDark"
        android:paddingStart="0dp"
        android:paddingEnd="5dp"
        app:srb_isIndicator="true"
        app:srb_numberOfStars="10"
        app:srb_rating="5"
        app:srb_starSize="25dp"
        app:srb_stepSize="0.1" />

</RelativeLayout>
